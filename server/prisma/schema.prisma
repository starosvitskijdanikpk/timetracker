generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id          String      @id @default(uuid())
  name        String
  color       String
  createdAt   DateTime    @default(now())
  timeEntries TimeEntry[]
}

model TimeEntry {
  id        String    @id @default(uuid())
  taskName  String
  projectId String?
  project   Project?  @relation(fields: [projectId], references: [id])
  startTime DateTime
  endTime   DateTime?
  duration  Int?
  createdAt DateTime  @default(now())

  @@index([startTime])
  @@index([projectId])
}

model TaskName {
  id     String   @id @default(uuid())
  name   String   @unique
  usedAt DateTime @default(now())
}

